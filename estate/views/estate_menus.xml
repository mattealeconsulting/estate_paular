<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Root app menu -->
    <menuitem id="menu_estate_root" name="Real Estate" groups="estate.group_estate_user" />

    <!-- Advertisments -->
    <menuitem id="menu_estate_properties"
        parent="menu_estate_root"
        name="Advertisements"
        action="estate.action_estate_property"
        sequence="10" />

    <!-- Kanban -->
    <menuitem id="menu_estate_properties_kanban"
        name="Properties"
        parent="estate.menu_estate_root"
        action="estate.action_estate_properties_kanban"
        sequence="5" />

    <!-- Settings -->
    <menuitem id="menu_estate_settings" parent="menu_estate_root"
        name="Settings" sequence="90"
        groups="estate.group_estate_manager" />

    <menuitem id="menu_estate_property_types" parent="menu_estate_settings"
        name="Property Types" action="estate.action_estate_property_type" />

    <menuitem id="menu_estate_property_tags" parent="menu_estate_settings"
        name="Property Tags" action="estate.action_estate_property_tag" />


    <record id="menu_estate_properties" model="ir.ui.menu">
        <field name="active" eval="False" />
    </record>

</odoo>