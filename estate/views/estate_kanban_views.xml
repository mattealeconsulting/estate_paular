<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_estate_property_kanban" model="ir.ui.view">
    <field name="name">estate.property.kanban</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_small_column"
              default_group_by="property_type_id"
              group_create="1"
              sample="1"
              create="1"
              quick_create="0"
              decoration-muted="state == 'canceled'"
              decoration-success="state in ('offer_accepted','sold')"
              decoration-warning="state == 'offer_received'">

        <field name="name"/>
        <field name="property_type_id"/>
        <field name="expected_price"/>
        <field name="best_price" optional="hide"/>
        <field name="tag_ids"/>
        <field name="state"/>

        <templates>
          <t t-name="kanban-box">
            <div class="o_kanban_record">
              <div class="o_kanban_record_title">
                <strong><t t-esc="record.name.value"/></strong>
              </div>

              <div class="o_kanban_record_subtitle">
                <t t-if="record.property_type_id.raw_value">
                  <t t-esc="record.property_type_id.value"/>
                </t>
              </div>

              <div class="o_kanban_record_body">
                <div>
                  <span class="text-muted">Expected Price: </span>
                  <span><t t-esc="record.expected_price.value"/></span>
                </div>

                <t t-if="record.best_price and record.best_price.value">
                  <div>
                    <span class="text-muted">Best Offer: </span>
                    <span><t t-esc="record.best_price.value"/></span>
                  </div>
                </t>

                <t t-if="record.tag_ids and record.tag_ids.raw_value and record.tag_ids.raw_value.length">
                  <div style="margin-top:6px;">
                    <t t-foreach="record.tag_ids.raw_value" t-as="tag">
                      <span class="o_tag" style="margin-right:4px; margin-top:2px;">
                        <t t-esc="tag[1]"/>
                      </span>
                    </t>
                  </div>
                </t>
              </div>

              <div class="o_kanban_record_bottom">
                <span class="badge" t-attf-class="badge #{record.state.value}">
                  <t t-esc="record.state.value"/>
                </span>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record id="action_estate_properties_kanban" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">kanban,list,form</field>
    <field name="view_id" ref="estate.view_estate_property_kanban"/>
    <field name="search_view_id" ref="estate.view_estate_property_search"/>
    <field name="context">{'search_default_group_by_type': 1}</field>
  </record>
</odoo>
