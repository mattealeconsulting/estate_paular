<?xml version="1.0" encoding="utf-8"?>

<odoo noupdate="1">

  <!-- === buyers === -->
  <record id="partner_Mihai" model="res.partner">
    <field name="name">Mihai Pop</field>
    <field name="email">mihai@example.com</field>
  </record>

  <record id="partner_ion" model="res.partner">
    <field name="name">Ion Ionescu</field>
    <field name="email">ion@example.com</field>
  </record>

  <!-- === Property Types === -->
  <record id="property_type_house" model="estate.property.type">
    <field name="name">House</field>
  </record>

  <record id="property_type_apartment" model="estate.property.type">
    <field name="name">Apartment</field>
  </record>

  <!-- === Tags === -->
  <record id="property_tag_renovated" model="estate.property.tag">
    <field name="name">Renovated</field>
    <field name="color">2</field>
  </record>

  <record id="property_tag_balcony" model="estate.property.tag">
    <field name="name">Balcony</field>
    <field name="color">4</field>
  </record>

  <record id="property_tag_seaview" model="estate.property.tag">
    <field name="name">Sea View</field>
    <field name="color">6</field>
  </record>

  <!-- === Properties (type, tags, offers) === -->
  <record id="property_green_villa" model="estate.property">
    <field name="name">Green Villa</field>
    <field name="description">Spacious family house with garden.</field>
    <field name="postcode">400123</field>
    <field name="date_availability">2025-10-15</field>
    <field name="expected_price">220000</field>
    <field name="living_area">140</field>
    <field name="bedrooms">4</field>
    <field name="garden">True</field>
    <field name="garden_area">200</field>
    <field name="garden_orientation">south</field>
    <field name="property_type_id" ref="estate.property_type_house"/>
    <field name="tag_ids" eval="[(6,0,[ref('estate.property_tag_renovated'), ref('estate.property_tag_balcony')])]"/>
    <field name="offer_ids" eval="[
      (0,0, {'partner_id': ref('estate.partner_Mihai'),  'price': 210000, 'status': 'refused'}),
      (0,0, {'partner_id': ref('estate.partner_ion'), 'price': 225000, 'status': False})
    ]"/>
  </record>

  <record id="property_skyline_flat" model="estate.property">
    <field name="name">Skyline Flat</field>
    <field name="description">Top-floor apartment with city panorama.</field>
    <field name="postcode">010101</field>
    <field name="date_availability">2025-11-01</field>
    <field name="expected_price">125000</field>
    <field name="living_area">65</field>
    <field name="bedrooms">2</field>
    <field name="garden">False</field>
    <field name="property_type_id" ref="estate.property_type_apartment"/>
    <field name="tag_ids" eval="[(6,0,[ref('estate.property_tag_seaview')])]"/>
  </record>

  <record id="offer_flat_Mihai" model="estate.property.offer">
    <field name="property_id" ref="estate.property_skyline_flat"/>
    <field name="partner_id"  ref="estate.partner_Mihai"/>
    <field name="price">118000</field>
    <field name="status">accepted</field>
  </record>

  <record id="offer_flat_ion" model="estate.property.offer">
    <field name="property_id" ref="estate.property_skyline_flat"/>
    <field name="partner_id"  ref="estate.partner_ion"/>
    <field name="price">116000</field>
    <field name="status">refused</field>
  </record>

</odoo>
