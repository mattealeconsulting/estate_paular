<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <record id="module_category_estate" model="ir.module.category">
      <field name="name">Real Estate</field>
      <field name="sequence">30</field>
    </record>

    <record id="group_estate_user" model="res.groups">
      <field name="name">Estate / User</field>
      <field name="category_id" ref="module_category_estate"/>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_estate_manager" model="res.groups">
      <field name="name">Estate / Manager</field>
      <field name="category_id" ref="module_category_estate"/>
      <field name="implied_ids" eval="[(4, ref('estate.group_estate_user'))]"/>
    </record>

    <record id="rule_property_user_read_all" model="ir.rule">
      <field name="name">Property - user read all</field>
      <field name="model_id" ref="model_estate_property"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('estate.group_estate_user'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="0"/>
      <field name="perm_create" eval="0"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <record id="rule_property_user_write_own_open" model="ir.rule">
      <field name="name">Property - user write own &amp; open</field>
      <field name="model_id" ref="model_estate_property"/>
      <field name="domain_force">[
        ('salesperson_id', '=', user.id),
        ('state', 'not in', ['sold','canceled'])
      ]</field>
      <field name="groups" eval="[(4, ref('estate.group_estate_user'))]"/>
      <field name="perm_read" eval="0"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <record id="rule_property_manager_all" model="ir.rule">
      <field name="name">Property - manager all</field>
      <field name="model_id" ref="model_estate_property"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('estate.group_estate_manager'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="1"/>
    </record>

    <record id="rule_offer_user_own_properties" model="ir.rule">
      <field name="name">Offer - user on own properties</field>
      <field name="model_id" ref="model_estate_property_offer"/>
      <field name="domain_force">[('property_id.salesperson_id', '=', user.id)]</field>
      <field name="groups" eval="[(4, ref('estate.group_estate_user'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="0"/>
    </record>

    <record id="rule_offer_manager_all" model="ir.rule">
      <field name="name">Offer - manager all</field>
      <field name="model_id" ref="model_estate_property_offer"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('estate.group_estate_manager'))]"/>
      <field name="perm_read" eval="1"/>
      <field name="perm_write" eval="1"/>
      <field name="perm_create" eval="1"/>
      <field name="perm_unlink" eval="1"/>
    </record>

  </data>
</odoo>
