    <!-- PRODUCT ATTRIBUTES   -->

    <!-- Weight Attribute -->
    <record id="attr_weight" model="product.attribute">
        <field name="name">Weight</field>
        <field name="display_type">radio</field>
        <field name="create_variant">no_variant</field>
        <field name="visibility">visible</field>
    </record>
    <record id="attr_weight_200g" model="product.attribute.value">
        <field name="name">200g</field>
        <field name="attribute_id" ref="attr_weight"/>
        <field name="sequence">1</field>
    </record>
    <record id="attr_weight_400g" model="product.attribute.value">
        <field name="name">400g</field>
        <field name="attribute_id" ref="attr_weight"/>
        <field name="sequence">2</field>
    </record>
    <record id="attr_weight_500g" model="product.attribute.value">
        <field name="name">500g</field>
        <field name="attribute_id" ref="attr_weight"/>
        <field name="sequence">3</field>
    </record>
    <record id="attr_weight_1kg" model="product.attribute.value">
        <field name="name">1kg</field>
        <field name="attribute_id" ref="attr_weight"/>
        <field name="sequence">4</field>
    </record>

